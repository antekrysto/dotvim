" Chargment de Pathogen
call pathogen#runtime_append_all_bundles()
call pathogen#helptags()

" Activate automatic indentation
set autoindent
" Redefine tabulations
set expendtab
set shiftwidth=4
set softtabstop=4
set tabstop=8

" activate auto file type detection
filetype on
filetype plugin indent on
" Max line length
set textwidth=79

" Syntax coloration
syntax on

